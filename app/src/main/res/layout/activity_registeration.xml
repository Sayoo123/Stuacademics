<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/reg_bb"
    tools:context=".Registeration">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="204dp"
        android:layout_height="62dp"
        android:fontFamily="@font/lobster"
        android:paddingLeft="28dp"
        android:text="Register"
        android:textColor="@color/light_blue"
        android:textColorHint="@color/black"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171" />

    <LinearLayout
        android:layout_width="391dp"
        android:layout_height="616dp"
        android:orientation="vertical"
        android:paddingLeft="48dp"
        android:paddingTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.778">

        <EditText
            android:id="@+id/Register_email"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:hint="Email"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="13dp"
            android:textColorHint="#434343" />

        <EditText
            android:id="@+id/Register_password"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:hint="Password"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="13dp"
            android:textColorHint="#434343" />

        <EditText
            android:id="@+id/Register_confirmpassword"
            android:layout_width="295dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:hint="Confirm passowrd"
            android:inputType="text"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="13dp"
            android:textColorHint="#434343" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Register"
            android:layout_width="178dp"
            android:layout_height="61dp"
            android:layout_marginLeft="58dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/login_button_color"
            android:text="Register" />

        <LinearLayout
            android:layout_width="293dp"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="122dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:text="Already have an account?" />

            <TextView
                android:id="@+id/backtologin"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:text="Back to Login"
                android:textColor="#BB80F6"
                android:textColorLink="#673AB7" />
            <ProgressBar
                android:id="@+id/progress_bar"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>